
<p>
  <strong>Poster:</strong>
  <%= image_tag @movie.image_url, height: "200" %>
</p>
<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @movie.desc %>
</p>

<%if current_user && current_user.admin?%>
  <%= link_to 'Edit', edit_movie_path(@movie) %>
  <%= link_to 'Destroy', movie_path(@movie), method: 'delete' %>
<%end%>
<%= link_to 'Back', movies_path %><br>

평점 평균 : <%= @movie.avg%>
<%#= @movie.reviews.average(:rating).ceil(2) %>


<%= render '/movies/star_rating' %>


<% @movie.reviews.each do |review|%>
  <p>별점 : <%= review.rating%></p>
  <p>리뷰 : <%= review.comment%></p>
<% end %>
